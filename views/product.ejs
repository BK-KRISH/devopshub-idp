<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= product.name %> - DevOps Shop</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>DevOps Shop</h1>
    <nav><a href="/">Home</a> | <a href="/cart">Cart (<%= (cart && cart.length) || 0 %>)</a></nav>
  </header>

  <main>
    <h2><%= product.name %></h2>
    <p><%= product.desc %></p>
    <!-- Convert USD to INR (approx ×83) -->
    <p class="price">₹<%= (product.price * 83).toFixed(2) %></p>

    <form method="post" action="/cart/add">
      <input type="hidden" name="productId" value="<%= product.id %>" />
      <button type="submit">Add to cart</button>
    </form>

    <p><a href="/">← Back to products</a></p>
  </main>

  <footer>
    <small>Deployed via Jenkins + Docker + AWS EC2</small>
  </footer>
</body>
</html>
