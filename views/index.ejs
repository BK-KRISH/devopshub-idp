<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="refresh" content="5">
  <title>DevOps Shop - Home</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>DevOps Course</h1>
    <nav><a href="/">Home</a> | <a href="/cart">Cart (<%= (cart && cart.length) || 0 %>)</a></nav>
  </header>

  <main>
    <h2>Products</h2>
    <div class="grid">
      <% products.forEach(function(p){ %>
        <div class="card">
          <h3><a href="/product/<%= p.id %>"><%= p.name %></a></h3>
          <p><%= p.desc %></p>
          <p class="price">â‚¹<%= p.price.toFixed(2) %></p>
          <form method="post" action="/cart/add">
            <input type="hidden" name="productId" value="<%= p.id %>" />
            <button type="submit">Add to cart</button>
          </form>
        </div>
      <% }) %>
    </div>
  </main>

  <footer>
    <small>DevOps Jenkins + Docker + AWS EC2</small>
  </footer>
</body>
</html>
