<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Your Cart - DevOps Shop</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>DevOps Shop</h1>
    <nav><a href="/">Home</a> | <a href="/cart">Cart (<%= (cart && cart.length) || 0 %>)</a></nav>
  </header>

  <main>
    <h2>Your Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <ul>
        <% cart.forEach(function(item){ %>
          <li><strong><%= item.name %></strong> â€” $<%= item.price.toFixed(2) %></li>
        <% }) %>
      </ul>
      <p><strong>Total: $<%= total.toFixed(2) %></strong></p>

      <form method="post" action="/checkout">
        <button type="submit">Checkout (demo)</button>
      </form>
    <% } %>
  </main>

  <footer>
    <small>Deployed via Jenkins + Docker + AWS EC2</small>
  </footer>
</body>
</html>
